<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:width="100dp"
                        android:height="100dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#222222" />
                    <solid android:color="#B4B4B4B4"/>
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:width="100dp"
                        android:height="100dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#222222" />
                </shape>
            </item>
        </selector>
    </item>
    <item
        android:bottom="16dp"
        android:right="18dp"
        android:top="18dp"
        android:left="18dp">
        <shape android:shape="oval">
            <solid android:color="#e9e9e9"/>
        </shape>
    </item>
    <item
        android:bottom="18dp"
        android:right="19dp"
        android:top="19dp"
        android:left="19dp">
        <shape android:shape="oval">
            <solid android:color="#d9d9d9"/>
        </shape>
    </item>
    <item
        android:bottom="19dp"
        android:right="20dp"
        android:top="20dp"
        android:left="20dp">
        <shape android:shape="oval">
            <solid android:color="#bfbfbf"/>
        </shape>
    </item>
    <item
        android:bottom="20dp"
        android:right="20dp"
        android:top="20dp"
        android:left="20dp">
        <shape android:shape="oval">
            <solid android:color="#E6E3E0"/>
        </shape>
    </item>
    <item
        android:bottom="25dp"
        android:right="25dp"
        android:top="25dp"
        android:left="25dp">
        <shape android:shape="oval">
            <stroke android:width="2dp"/>
        </shape>
    </item>
</layer-list>