<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape
                    android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:width="80dp"
                        android:height="80dp" />

                    <solid android:color="#bfbfbf" />
                    <stroke
                        android:width="1dp"
                        android:color="#222222" />
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape
                    android:shape="oval"
                    android:useLevel="true">
                    <size
                        android:width="80dp"
                        android:height="80dp" />

                    <solid android:color="@color/float_transparent" />
                    <stroke
                        android:width="1dp"
                        android:color="#222222" />
                </shape>
            </item>
        </selector>
    </item>

    <item
        android:bottom="50dp"
        android:right="50dp"
        android:left="50dp"
        android:top="50dp">
        <bitmap android:src="@drawable/switch_camera"
            android:gravity="center" />
    </item>

</layer-list>