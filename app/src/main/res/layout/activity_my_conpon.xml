<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.activity.SettingActivity"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/top"/>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jerry.jtakeaway.custom.AniImgButton
            android:id="@+id/return_aib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/return_btn"
            android:scaleType="centerCrop"
            android:background="@color/float_transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的优惠卷"
            android:layout_centerInParent="true"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/conponGetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领取优惠卷"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="#ff7875"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B4B4B4"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conponRecyvlerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>