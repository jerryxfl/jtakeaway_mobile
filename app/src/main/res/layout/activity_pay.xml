<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.activity.PayActivity"
    android:orientation="vertical">
    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#A89696"
        tools:ignore="MissingConstraints" />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jerry.jtakeaway.custom.AniImgButton
            android:id="@+id/return_aib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/return_btn"
            android:scaleType="centerCrop"
            android:background="@color/float_transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:layout_centerInParent="true"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B1B1B1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conpon_recyclview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textSize="18sp"/>
        <RadioGroup
            android:id="@+id/payWay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:scaleType="centerCrop"
                       android:src="@drawable/wallet"/>
                   <TextView
                       android:layout_marginStart="50dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="钱包支付"
                       android:layout_centerVertical="true"
                       android:textColor="#222222"/>
                   <RadioButton
                       android:checked="true"
                       android:id="@+id/walletPay"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_alignParentEnd="true"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:scaleType="centerCrop"
                       android:src="@drawable/wechat"/>
                   <TextView
                       android:layout_marginStart="50dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="微信支付"
                       android:layout_centerVertical="true"
                       android:textColor="#222222"/>
                   <RadioButton
                       android:id="@+id/wechatPay"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_alignParentEnd="true"/>
               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:scaleType="centerCrop"
                       android:src="@drawable/zfb"/>
                   <TextView
                       android:layout_marginStart="50dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="支付宝支付"
                       android:layout_centerVertical="true"
                       android:textColor="#222222"/>
                   <RadioButton
                       android:id="@+id/aliPay"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_alignParentEnd="true"/>
               </RelativeLayout>
           </LinearLayout>
        </RadioGroup>
        <Button
            android:id="@+id/payBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F76B6C"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="立即支付"/>
    </LinearLayout>

</LinearLayout>