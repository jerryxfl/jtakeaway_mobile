<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.user.activity.OpenPaymentActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/top"/>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jerry.jtakeaway.custom.AniImgButton
            android:id="@+id/return_aib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/return_btn"
            android:scaleType="centerCrop"
            android:background="@color/float_transparent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置支付密码"
            android:layout_centerInParent="true"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#B1B1B1"/>
    <LinearLayout
        android:background="#F7F8FC"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="请设置密码,用于支付验证"
            android:layout_marginTop="40dp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="viewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="不能是登录密码或连续数字"
            android:textColor="#919191"
            android:textStyle="bold"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <com.jerry.jtakeaway.custom.JPayEditText
            android:id="@+id/payEdit"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_6"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_7"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_8"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_9"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/num_0"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/delete"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="删除"
                        android:textColor="#222222"
                        android:background="@drawable/num_button_selector"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>